<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
      android:background="@drawable/sp"
    android:id="@+id/main">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/contact"
       android:text="Contact Us"
       android:textSize="25sp"
       android:textStyle="bold"
       android:layout_above="@+id/relativeLayout"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="47dp"
       android:textColor="#000000"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"


       android:padding="10dp"
       android:layout_marginLeft="10dp"
       android:layout_centerVertical="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:id="@+id/relativeLayout">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Company Name :- My agricuture"
          android:textStyle="bold"
          android:textColor="#000000"

          android:id="@+id/name"
          android:textSize="19dp"    />
      <!--android:background="@drawable/square"-->

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:text="Website :- www.myagriculture.com"
          android:id="@+id/website"
          android:textSize="19dp"
          android:textColor="#000000"

          android:layout_below="@+id/name"
          android:layout_marginTop="10dp"
          android:ems="10"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Contact Number :- 020202020202"
          android:id="@+id/contactn"
          android:textSize="19dp"
          android:textStyle="bold"
          android:textColor="#000000"

          android:layout_below="@+id/website"
          android:layout_marginTop="10dp"
          android:ems="10"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Email :- demoariculture@xyz.com"
          android:id="@+id/email"
          android:textSize="19dp"
          android:textStyle="bold"
          android:textColor="#000000"

          android:layout_below="@+id/contactn"
          android:layout_marginTop="10dp"
          android:ems="10"/>
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/email"
          android:layout_marginTop="10dp"


          >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Address :- f17,18,19 xyz Building"
             android:id="@+id/add"
             android:textSize="19dp"
             android:textStyle="bold"
             android:textColor="#000000"
             android:ems="10"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="                   GM road, Pune"
             android:id="@+id/address"
             android:layout_below="@+id/add"
             android:textStyle="bold"
             android:textSize="19dp"
             android:textColor="#000000"
             android:ems="10"/>
      </RelativeLayout>


   </RelativeLayout>
</RelativeLayout>
